@model ContactManagementSystem.Models.Contact

<div>
    <h1 class="display-4 text-center">Edit Contact</h1>
    <form method="post">
        <div class="form-group">
            @Html.Label("Name", new { @class = "form-label" })
            @Html.TextBox("Name", Model.Name, new { @class = "form-control", @id = "name", @placeholder = "Name" })
        </div>
        <div class="form-group">
            @Html.Label("Email Id", new { @class = "form-label" })
            @Html.TextBox("EmailId", Model.EmailId, new { @class = "form-control", @id = "emailId", @placeholder = "Email Id" })
        </div>
        <div class="form-group">
            @Html.Label("Phone Number", new { @class = "form-label" })
            @Html.TextBox("PhoneNumber", Model.PhoneNumber, new { @class = "form-control", @id = "phoneNumber", @placeholder = "Phone Number" })
        </div>
        <div class="form-group">
            @Html.Label("Address", new { @class = "form-label" })
            @Html.TextArea("Address", Model.Address, new { @class = "form-control", @id = "address", @placeholder = "Address", @rows = "3" })
        </div>
        <div class="form-group">
            <button class="btn btn-primary" type="submit">Update</button>
            @Html.ActionLink("Back", "Contact", "Contact", new { }, new { @class = "btn btn-success" })
        </div>
    </form>
</div>

